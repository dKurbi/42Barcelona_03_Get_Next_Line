
#!/bin/bash


if [ -z "$1" ]; then
    BUFFER_SIZE=42
else
# Obtener el valor de BUFFER_SIZE del primer argumento
BUFFER_SIZE=$1
fi
# Compilar los archivos fuente
gcc -g -Wall -Wextra -Werror -D BUFFER_SIZE=$BUFFER_SIZE get_next_line.c get_next_line_utils.c main_get_next_line.c -o gnl

# Verificar si la compilación tuvo éxito
if [ $? -eq 0 ]; then
    # Ejecutar el programa
    ./gnl
else
    echo "Error de compilación. Por favor, revise el código fuente."
fi
